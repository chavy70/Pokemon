@{
    ViewData["Title"] = "Buscador de Pokemon";
}
@model Pokemons




<div class="text-center">
    <div class="card">
        <div class="card-header">
            @ViewBag.Accion
        </div>
        <div class="card-body">

            <form asp-action="Index" asp-controller="Home">
                <div class="row">
                    <div class="form-group col-md-11">
                        <input type="text" placeholder="Ingrese Nombre del Pokemon o su Pokedex" name="buscar" class="form-control" />
                    </div>    
                    <div class="form-group col-md-1">
                        <button type="submit" class="btn "><img src="~/img/buscar-pokemon.png" style="width: 48px;" /> </button>
                        
                    </div>
                    <br />
                    <div class="form-group col-md-12">
                        <div class="row">
                            <div class="form-group col-md-1">
                                @if (@Model != null)
                                {
                                    <img src="@Model.Sprites.Front_Default" alt="MDN" /> 
                                    
                                }
                            </div>
                            <div class="form-group col-md-2">
                                @if (@Model != null)
                                {
                                    <label>Nombre</label> <h4>@Model.Name</h4>
                                }
                            </div>
                             <div class="form-group col-md-2">
                                @if (@Model != null)
                                {
                                    <label>Experiencia</label> <h4>@Model.Base_Experience</h4>
                                }
                            </div>
                            <div class="form-group col-md-2">
                                @if (@Model != null)
                                {
                                    <label>Altura</label> <h4>@Model.Height</h4>
                                }
                            </div>
                           
                            <div class="form-group col-md-2">
                                @if (@Model != null)
                                {
                                    <label>Peso</label> <h4>@Model.Weight</h4>
                                }
                            </div>
                           
                            <div class="form-group col-md-2">
                                @if (@Model != null)
                                {
                                    <label>Orden</label> <h4>@Model.Order</h4>
                                }
                            </div>
                        </div>
                        </div>
                   
                </div>
               
                


            </form>
        </div>
    </div>
</div>
